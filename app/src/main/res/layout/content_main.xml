<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shiwantha.testone.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.shiwantha.testone.MainActivity" />

    <RadioGroup
        android:id="@+id/radio_group_list_selector"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#c21d0e0e"
        android:weightSum="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/Gyms"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Gyms"
            android:textSize="@dimen/main_view_font_size"
            android:textColor="@color/cardview_light_background"
            android:gravity="center_horizontal|center_vertical"
            android:layout_weight="1"
            android:padding="3dp"

            />


        <RadioButton
            android:id="@+id/MMA"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="MMA"
            android:textSize="@dimen/main_view_font_size"
            android:textColor="@color/cardview_light_background"
            android:layout_weight="1"
            android:padding="3dp"
             />


        <RadioButton
        android:id="@+id/studios"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Gyms"
        android:textSize="@dimen/main_view_font_size"
            android:textColor="@color/cardview_light_background"
        android:gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        android:padding="3dp"

        />

        <RadioButton
            android:id="@+id/CrossFit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Cross Fit"
            android:textSize="@dimen/main_view_font_size"
            android:textColor="@color/cardview_light_background"
            android:layout_weight="1"
            />
        <RadioButton
            android:id="@+id/Competition"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="Competition"
            android:textColor="@color/cardview_light_background"
            android:textSize="@dimen/main_view_font_size"
            android:layout_weight="1"/>

    </RadioGroup>


</RelativeLayout>
